<h2><%=@project_cycle.cycle.cycle_name %></h2>

<%= link_to 'Add Task', new_project_cycle_task_path(@project_cycle) %>

<h4>Current Tasks</h4>
<% @project_cycle.tasks.each do |task| %>
  <li><p><%= task.task_name %> - Priority: <%= task.priority %>
    - Status: <%= Status.find(task.status_id).status_name %>
  </p></li>
<% end %>
