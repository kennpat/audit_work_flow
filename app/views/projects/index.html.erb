<h2 class='headline'>Current Projects</h2>
<div class='listing'>
<% @projects.each do |project| %>
  <li>
    <h3><a href="/projects/<%=project.id%>"><%= project.project_name %></a> - <%= project.project_type %></h3>
    <p><%= project.status %> <%=project.stage %></p>
  </li>
<% end %>
</div>
<%= link_to 'Add a new Project',new_project_path, class: 'button' %>

